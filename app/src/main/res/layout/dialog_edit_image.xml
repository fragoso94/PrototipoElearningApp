<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="152dp"
    app:cornerRadius="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cornerRadius="24dp"
        tools:ignore="ExtraText">
        android:orientation="horizontal

        <Button
            android:id="@+id/button_gallery"
            android:layout_margin="16dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:backgroundTint="@color/inactive"
            android:drawableTop="@drawable/baseline_image_24"
            android:text="@string/button_gallery"
            app:cornerRadius="16dp"
            />

        <Button
            android:id="@+id/button_cam"
            android:layout_margin="16dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:backgroundTint="@color/inactive"
            android:drawableTop="@drawable/baseline_camera_24"
            android:text="@string/button_cam"
            app:cornerRadius="16dp"
            />



   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>